{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"outDir": "./out-tsc/spec",
		"types": [
			"jest",
			"node"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"files": [
		"src/polyfills.ts"
	],
	"include": [
		"src/**/*.spec.ts",
		"src/**/*.d.ts"
	]
}